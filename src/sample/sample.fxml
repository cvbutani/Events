<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <TextField fx:id="javaPrint" GridPane.rowIndex="0" GridPane.columnIndex="0" onKeyReleased="#holdKeyRelease"/>
    <Button fx:id="finishButton" text="Finish" GridPane.rowIndex="0" GridPane.columnIndex="1"
            onAction="#onClickButton"/>
    <Button fx:id="startButton" text="Start" GridPane.rowIndex="1" GridPane.columnIndex="1"
            onAction="#onClickButton"/>
    <CheckBox fx:id="selectCheckBox" text="Clear field" GridPane.rowIndex="1" GridPane.columnIndex="0"
              onAction="#handleChange"/>
    <Label fx:id="ourLabel" text="Nothing is happening" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
</GridPane>